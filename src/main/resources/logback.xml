<configuration>
  <appender name="A1" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d [%t] %-5p %c - %m%n</pattern>
    </encoder>
  </appender>
  <logger name="com.mongodb.diffutil" level="DEBUG" additivity="false"/>
  <logger name="com.mongodb.shardsync" level="DEBUG" additivity="false"/>
  <logger name="com.mongodb.mongostat" level="DEBUG" additivity="false"/>
  <logger name="com.mongodb.mongomirror" level="DEBUG" additivity="false"/>
  <logger name="com.mongodb.stats" level="DEBUG" additivity="false"/>
  <logger name="org.mongodb" level="WARN" additivity="false"/>
  
  <root level="ERROR">
    <appender-ref ref="A1"/>
  </root>
</configuration>